<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"
                android:scaleType="center"/>

            <com.nmssdmf.commonlib.view.SearchEditText
                android:id="@+id/setSearch"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@drawable/shape_search_edittext"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical"
                android:hint="搜索"
                android:textColorHint="#FF999999"
                android:textSize="14dp"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="3dp"
                android:gravity="center_vertical|left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.nmssdmf.commonlib.view.TagLayout
                android:id="@+id/tl"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                app:horizontal_count="1"
                app:vertical_space="28dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"/>

            <include
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                layout="@layout/include_recyclerview_cutoff_line"/>

            <com.nmssdmf.customerviewlib.CustomerRecyclerView
                android:id="@+id/crv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>
</layout>
