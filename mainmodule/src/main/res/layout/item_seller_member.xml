<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.zhixingjia.bean.mainmodule.IndexBean.SellerBean"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="21.5dp">

        <com.nmssdmf.commonlib.view.GlideImageView
            android:id="@+id/ivServiceIcon"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_gravity="center_horizontal"
            app:src="@{data.imgs}" />

        <TextView
            android:id="@+id/tvSellerName"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@{data.company}"
            android:layout_gravity="center_horizontal"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#FF333333"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rb"
                style="@style/myRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="5"
                android:stepSize="0.1"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.score}"
                android:textColor="#FF666666"
                android:layout_marginLeft="3dp"
                android:textSize="8dp" />
        </LinearLayout>

    </LinearLayout>
</layout>