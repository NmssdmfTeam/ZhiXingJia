<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llWrapper"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:elevation="1000dp"
        android:orientation="vertical"
        android:translationZ="1000dp">

        <View
            android:id="@+id/vMarginTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ivReturn"
                android:layout_width="28dp"
                android:layout_height="44dp"
                android:background="@drawable/selector_trans"
                android:scaleType="center"
                android:src="@drawable/ic_arrow_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/vSearch"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/rlMessage"
                android:layout_toRightOf="@+id/ivReturn"
                android:background="@drawable/shape_search_gray_trans"
                android:drawableLeft="@drawable/search_black_inner"
                android:drawablePadding="3dp"
                android:paddingLeft="14dp"
                android:text="@string/search_product_seller"
                android:textColor="#FF333333"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/ivMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/selector_trans"
                android:scaleType="center"
                android:src="@drawable/icon_message"/>

            <RelativeLayout
                android:id="@+id/rlMessage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/ivNotice"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:src="@drawable/circle_notice" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


</layout>
