<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.nmssdmf.commonlib.view.GlideImageView
                android:id="@+id/ivAvater"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                app:roundAsCircle="@{true}" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14.5dp"
                android:layout_toRightOf="@id/ivAvater"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="城内人"
                android:textColor="#FF333333"
                android:textSize="16dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEEEEEE"
            android:padding="8dp"
            android:text="引用城内人11-12 11:45发表的：等了老久，特能装 大容量 好看哈哈哈哈等了老久，特能装，大容量"
            android:textColor="#FF000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="等了老久，特能装 大容量 好看哈哈哈哈等了老久，特能装 大容量 好看哈哈哈哈"
            android:textColor="#FF000000"
            android:textSize="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvComment"
            android:layout_marginTop="8dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCreateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="1天前"
                android:textColor="#FF999999"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvZan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvCreateDate"
                android:layout_marginLeft="204dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/tvCreateDate"
                android:drawableLeft="@drawable/icon_commentlist_zan"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="点赞"
                android:textColor="#FF999999"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvZan"
                android:drawableLeft="@drawable/icon_commentlist_comment"
                android:text="评论"
                android:textColor="#FF999999"
                android:textSize="12dp" />
        </RelativeLayout>

        <include
            android:id="@+id/includeBottomLine"
            layout="@layout/include_recyclerview_cutoff_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tvCreateDate"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</layout>