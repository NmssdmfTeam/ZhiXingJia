<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="256.5dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            >
            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:text="取消"
                android:textColor="#FFFF9A14"
                android:textSize="15dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tvSure"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:text="确定"
                android:textColor="#FFFF9A14"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:wheel_item_text_color="#FF999999"
            app:wheel_selected_item_text_color="#FF333333"
            app:wheel_item_text_size="17dp"
            app:wheel_indicator="true"
            app:wheel_indicator_color="#CCCCCC"
            app:wheel_indicator_size="1dp"/>

    </LinearLayout>
</layout>
