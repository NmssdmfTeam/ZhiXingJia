<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>

    </style>

    <declare-styleable name="AddMinusView">
        <attr name="maxNum" format="integer"></attr>
        <attr name="currentNum" format="integer"></attr>
        <attr name="addImageOn" format="reference"></attr>
        <attr name="minusImageOn" format="reference"></attr>
        <attr name="addImageOff" format="reference"></attr>
        <attr name="minusImageOff" format="reference"></attr>
    </declare-styleable>

</resources>
