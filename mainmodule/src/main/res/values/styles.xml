<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>

    </style>

    <style name="myRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_big</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>

    </style>

    <declare-styleable name="AddMinusView">
        <attr name="maxNum" format="integer"></attr>
        <attr name="currentNum" format="string"></attr>
        <attr name="addImageOn" format="reference"></attr>
        <attr name="minusImageOn" format="reference"></attr>
        <attr name="addImageOff" format="reference"></attr>
        <attr name="minusImageOff" format="reference"></attr>
    </declare-styleable>
    <declare-styleable name="MyMoneyView">
        <attr name="top_textcolor" format="color"></attr>
        <attr name="top_unit_textcolor" format="color"></attr>
        <attr name="bottom_textcolor" format="color"></attr>
        <attr name="top_textsize" format="dimension"></attr>
        <attr name="top_unit_textsize" format="dimension"></attr>
        <attr name="bottom_textsize" format="dimension"></attr>
        <attr name="top_text" format="string"></attr>
        <attr name="bottom_text" format="string"></attr>
    </declare-styleable>
</resources>
